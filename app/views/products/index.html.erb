<% content_for(:body) do %>
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t('.title') %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= t('.productlist') %>
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
            <div class="row" style="margin-bottom: 15px">
              <div class="col-lg-3 pull-right">
                <%= link_to t('.new'), new_product_path, :class => 'btn btn-primary btn-lg btn-block' %>
              </div>
            </div>
            <div class="table-responsive">
              <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
              <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                  <th><%= t('.no') %></th>
                  <th><%= t('.account_unit') %></th>
                  <th><%= t('.account') %></th>
                  <th><%= t('.sub_account') %></th>
                  <th><%= t('.vendor') %></th>
                  <th><%= t('.lawson_item_number') %>
                  <th><%= t('.description') %>
                  <th><%= t('.mfg_code') %>
                  <th><%= t('.mfg_nbr') %>
                  <th><%= t('.po_date') %>
                  <th><%= t('.po_number') %>
                  <th><%= t('.po_line') %>
                  <th><%= t('.qty') %>
                  <th><%= t('.uom') %>
                  <th><%= t('.unit_cost') %>
                  <th><%= t('.total_cost') %>
                </tr>
                </thead>
                <tbody>
                <% @products.each_with_index  do |product, index| %>
                    <tr class="<%= cycle('success', 'info') %>">
                      <td><%= index + 1 %></td>
                      <td><%= product.account_unit %></td>
                      <td><%= product.account %></td>
                      <td><%= product.sub_account %></td>
                      <th><%= product.vendor %></th>
                      <th><%= product.lawson_item_number %></th>
                      <th><%= product.description %></th>
                      <th><%= product.mfg_code %></th>
                      <th><%= product.mfg_nbr %></th>
                      <th><%= product.po_date %></th>
                      <th><%= product.po_line %></th>
                      <th><%= product.po_line %></th>
                      <th><%= product.qty %></th>
                      <th><%= product.uom %></th>
                      <th><%= product.unit_cost %></th>
                      <th><%= product.total_cost %></th>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
      </div>
    </div>
<% end %>
